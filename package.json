{
  "name": "keiko-api-contracts-service",
  "version": "1.0.0",
  "description": "Containerized HTTP service for API contracts and specifications of the Keiko Personal Assistant platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "validate:openapi": "swagger-parser validate openapi/*.yaml",
    "docker:build": "docker build -t keiko-api-contracts .",
    "docker:run": "docker run -p 3000:3000 keiko-api-contracts",
    "k8s:deploy": "kubectl apply -f kubernetes/",
    "k8s:delete": "kubectl delete -f kubernetes/",
    "test:performance": "artillery run tests/performance/load-test-config.yml",
    "test:performance:quick": "artillery quick --count 100 --num 10 http://localhost:3000/health",
    "test:regression": "jest tests/integration/performance-regression.test.js --testTimeout=60000"
  },
  "keywords": [
    "api",
    "contracts",
    "openapi",
    "asyncapi",
    "protobuf",
    "keiko",
    "microservice",
    "docker",
    "kubernetes"
  ],
  "author": "Keiko Development Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "artillery": "^2.0.24",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Keiko-Development/keiko-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/Keiko-Development/keiko-contracts/issues"
  },
  "homepage": "https://github.com/Keiko-Development/keiko-contracts#readme"
}
